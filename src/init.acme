
init:
;===============================================================================
        ; set screen at $0400,
        ; character set at +$1800 (lower-case)
        lda # %00010111
        sta VIC_LAYOUT
        
        jsr init_interrupts

        ; turn off BASIC & KERNAL ROM
        dec CPU_CONTROL
        dec CPU_CONTROL

        jsr logo_screen
        jsr menu_screen
        jsr read_screen
        
        ; halt and catch fire
        jmp *

