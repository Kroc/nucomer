{
    "editor.insertSpaces": true,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
    "editor.rulers": [
        8, 32, 80
    ],
    "[asm]": {
        "editor.tabSize": 8
    },
    "[markdown]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.wordWrap": "wordWrapColumn"
    },
    "search.exclude": {
        "bin"               : true,
        "build"             : true,
        "src/bsod64"        : true,
        "src/boot/loader"   : true,
    },
    // the TODO-tree extension is recommended
    // for finding the TODOs scattered in the code
    "todo-tree.filtering.excludeGlobs": [
        // exclude any source that might be
        // in our 3rd-party binaries folder
        "bin",
        // these folders contain generated content
        "build",
    ],
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "files.exclude": {
        "bin": false,
        // hide binary files in the build folder
        "build/*.d64" : true,
        "build/*.prg" : true,
        "build/*.exo" : true,
        "build/*.sid" : true,
        "build/*.ct"  : true,
    }
}