{
    "editor.insertSpaces": true,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 80,
    "editor.rulers": [
        8, 32, 80
    ],
    "[asm]": {
        "editor.tabSize": 8
    },
    "[markdown]": {
        "editor.tabSize": 4,
        "editor.insertSpaces": true,
        "editor.wordWrap": "wordWrapColumn"
    },
    "search.exclude": {
        "bin"                   : true,
        "build"                 : true,
        "src/bsod64"            : true,
        "src/boot/loader"       : true,
    },
    // the TODO-tree extension is recommended
    // for finding the TODOs scattered in the code
    "todo-tree.filtering.excludeGlobs": [
        // exclude any source that might be
        // in our 3rd-party binaries folder
        "bin", "src/boot/loader",
        // these folders contain generated content
        "build",
    ],
    "spellright.language": [
        "en"
    ],
    "spellright.documentTypes": [
        "markdown",
        "latex",
        "plaintext"
    ],
    "files.exclude": {
        // hide "bin" folder
        "bin"                   : true,
        // hide binary files
        "**/*.exe"              : true, // Windows executables
        "**/*.ct"               : true, // ACME text-conversion tables
        "**/*.bin"              : true, // generic BINary files
        "**/*.d64"              : true, // C64 1541 disk images
        "**/*.d71"              : true, // C64 1571 disk images
        "**/*.d81"              : true, // C64 1581 disk images
        "**/*.prg"              : true, // C64 program files
        "**/*.exo"              : true, // Exomizer-compressed binary
        "**/*.exo3"             : true, // as above
        "**/*.exp"              : true, // as above, with PRG address
        "**/*.sfx"              : true, // self-extracting Exomizer PRG
    },
}